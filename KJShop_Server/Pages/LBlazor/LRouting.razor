@page "/LBlazor/LRouting/{parameter1}"
@page "/LBlazor/LRouting/{parameter1}/{parameter2}"
@page "/LBlazor/LRouting"
@page "/LRouting"

@inject NavigationManager _NavigationManager

<h3>LRouting</h3>

<h4>Parameter 1: @Parameter1</h4>
<h4>Parameter 2: @Parameter2</h4>

@*<a href="LRouting?Param1=KJ&Param2=Blazor" class="btn btn-primary">Navigere til forspørgsel parameter</a>*@
<button @onclick="NavigateToQueryParam" class="btn btn-primary">Navigere til forspørgsel parameter</button>
<button class="btn btn-success" @onclick="LoadParameters">Henter parameter</button>

<br />

<h3>Forspørgsel streng parameter: </h3>
<h4>Param 1: @Param1</h4>
<h4>Param 2: @Param2</h4>

@code {

    [Parameter]
    public string Parameter1 { get; set; }

    [Parameter]
    public string Parameter2 { get; set; }

    [Parameter]
    public string Param1 { get; set; }

    [Parameter]
    public string Param2 { get; set; }

    private void LoadParameters()
    {
        var abosulteUri = new Uri(_NavigationManager.Uri);
        var queryParam = System.Web.HttpUtility.ParseQueryString(abosulteUri.Query);
        Param1 = queryParam["Param1"];
        Param2 = queryParam["Param2"];
    }

    private void NavigateToQueryParam()
    {
        _NavigationManager.NavigateTo("LRouting?Param1=KJ&Param2=Blazor");
    }
}
