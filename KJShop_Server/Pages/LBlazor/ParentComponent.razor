@page "/LBlazor/parentComponent"

<h3>Forældre barn relation</h3>


<CascadingValue Value="@MessageForGrandChild" Name="message">
    <CascadingValue Value="@LuckyNumber" Name="luckyNumber">
        <_ChildComponent @ref="childComp" OnButtonClick="ShowMessage" Titel="Denne Titel er kommet som parameter fra forældre componenten">
            <ChildContent>Gengiv fragment fra forældre! WooHOO!</ChildContent>
            @*<DangerChildContent>Advarsel indhold fra gengive fragment! WooHOO! </DangerChildContent>*@
        </_ChildComponent>
    </CascadingValue>
</CascadingValue>

<p><b>@messageText</b></p>

<_AnotherChildComponent placeholder="Placeholder from Parent"></_AnotherChildComponent>

<div class="row">
    <button class="btn btn-success" @onclick="()=>childComp.ToastrSuccess()">Show SweetAlert</button>
</div>

@*<_ChildComponent Titel="Dette er den anden barne komponent">
</_ChildComponent>*@


@code {

    private _ChildComponent childComp;

    public string MessageForGrandChild = "Dette er en besked fra dine bedsteforældre (ParentComponent)";
    public string LuckyNumber = "7";

    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "KJShop knap klik fra Child Component";
    }

}
