@inject IJSRuntime _JsRuntime

<div>
    <div class="alert alert-info">@Titel</div>
    <div class="alert alert-success">
        @if (DangerChildContent != null)
        {
            <span>@DangerChildContent</span>
        }
        else
        {
            @if (ChildContent != null)
            {
                <span>@ChildContent</span>
            }
            else
            {
                <span>Hej, fra Empty Render Fragment</span>
            }
        }
    </div>
    <button class="btn btn-danger" @onclick="OnButtonClick">Knap til at trykke på</button>

    <_GrandChildComponent></_GrandChildComponent>
</div>

@code {



    [Parameter]
    public string Titel { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment DangerChildContent { get; set; }

    [Parameter]
    public EventCallback OnButtonClick { get; set; }

    public async Task ToastrSuccess()
    {
        await _JsRuntime.ToastrSuccess("Operation Successful");
    }


}
